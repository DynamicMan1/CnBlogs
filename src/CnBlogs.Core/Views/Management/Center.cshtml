@model CnBlogs.Core.ViewModels.ManagementCenterViewModel

<header>
    <h1>管理中心</h1>
</header>

<div class="table-responsive">
    <table class="table table-hover table-condensed">
        <caption>用户信息表</caption>
        <thead>
            <tr>
                <th>Id</th>
                <th>邮箱</th>
                <th>登陆用户名</th>
                <th>显示名称</th>
                <th>密码</th>
                <th>创建时间</th>
                <th>最后信息修改时间</th>
                <th>登陆次数</th>
                <th>是否激活</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>@user.DisplayName</td>
                <td>@user.Password</td>
                <td>@user.CreateTime</td>
                <td>@user.LastModifiedTime</td>
                <td>@user.LoginTimes</td>
                <td>@user.IsActivate</td>
                <td>
                    <a href="#">查看</a>&nbsp;|&nbsp;
                    <a href="#">修改</a>&nbsp;|&nbsp;
                    <a href="#">删除</a>&nbsp;
                </td>
            </tr>
        }
        </tbody>
    </table>  
</div>

<div>
    <a href="/Management/BlogApply"><input class="btn btn-default btn-sm" type="button" value="查看用户博客申请" /></a>
</div>

