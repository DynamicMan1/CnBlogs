@model int

<link href="~/css/form.css" rel="stylesheet" />
<nav>
    <ul class="nav nav-pills">
        <li><a href="/User/Login">登陆</a></li>
        <li><a href="/User/Register">注册</a></li>
        <li class="active"><a href="#">申请博客</a></li>
        <li><a href="/User/GetUserName">找回用户名</a></li>
        <li><a href="/User/ResetPassword">重置密码</a></li>
    </ul>
</nav>
@if (Model == 0)
{
    <form action="/" method="POST" class="fieldset">
        <fieldset>
            <legend class="topic-title">博客申请提示</legend>
            <div class="block">
                注册用户登录后才能申请博客，立即<a href="/User/Login">登录</a>或<a href="/User/Register">注册</a>。
            </div>
            <div class="submit-block">
                <input type="submit" value="返回首页" class="sub-btn btn btn-primary btn-sm" id="subBtn" />
            </div>
        </fieldset>
    </form>
}

@if (Model == 1)
{
    <form action="/" method="POST" class="fieldset">
        <fieldset>
            <legend class="topic-title">博客申请提示</legend>
            <div class="block">
                您已经成功申请博客！
            </div>
            <div class="submit-block">
                <input type="submit" value="返回首页" class="sub-btn btn btn-primary btn-sm" id="subBtn" />
            </div>
        </fieldset>
    </form>
}
